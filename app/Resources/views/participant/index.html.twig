{% extends 'base.html.twig' %}
{% block body %}
    {% include 'layout.html.twig' %}
    {% block section %}

        <h1>Participants list</h1>

        <table>
            <thead>
            <tr>
                <th>Employeeno</th>
                <th>Designation</th>
                <th>Email</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Avatar</th>
                <th>Mobileno</th>
                <th>Gender</th>
                <th>Googleid</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Deletedat</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for participant in participants %}
                <tr>
                    <td><a href="{{ path('participant_show', { 'id': participant.id }) }}">{{ participant.employeeNo }}</a></td>
                    <td>{{ participant.designation }}</td>
                    <td>{{ participant.email }}</td>
                    <td>{{ participant.firstName }}</td>
                    <td>{{ participant.lastName }}</td>
                    <td>{{ participant.avatar }}</td>
                    <td>{{ participant.mobileNo }}</td>
                    <td>{{ participant.gender }}</td>
                    <td>{{ participant.googleId }}</td>
                    <td>{% if participant.createdAt %}{{ participant.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if participant.updatedAt %}{{ participant.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if participant.deletedAt %}{{ participant.deletedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ participant.id }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('participant_show', { 'id': participant.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('participant_edit', { 'id': participant.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('participant_new') }}">Create a new participant</a>
            </li>
        </ul>
    {% endblock %}

{% endblock %}

