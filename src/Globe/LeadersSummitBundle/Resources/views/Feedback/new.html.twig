{% extends 'LSBundle::layout.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block content %}
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Feedback creation</h3>
        </div>
        <div class="box-body">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            {{ form_widget(form) }}
            <input type="submit" value="Create" class="btn btn-primary pull-right" />
            {{ form_end(form) }}
            <a class="btn btn-primary pull-left" href="{{ path('feedback_index') }}">Back to the list</a>
        </div>
    </div>
{% endblock %}
